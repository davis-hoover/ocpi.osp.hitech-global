#include "htg-zrf8.dtsi"
/include/ "system-conf.dtsi"

/ {

	aliases {
		gpio0 = &gpio;
		mmc0 = &sdhci1;
		rtc0 = &rtc;
		usb0 = &usb0;
	};

    fclk1 {
        status = "disabled";
    };
    fclk2 {
        status = "disabled";
    };
    fclk3 {
        status = "disabled";
    };

    chosen {
        /*bootargs = "console=ttyPS0,115200n8 earlycon clk_ignore_unused cpuidle.off=1";*/
        bootargs = "console=ttyPS0,115200n8 earlycon cpuidle.off=1";
    };
};

/* Enable the Full-Power Domain's watchdog. This watchdog is kicked from the */
/* cerebro-server-watchdog shell script                                      */
&watchdog0 {
    status = "disabled";
    timeout-sec = <90>;
    reset-on-timeout;
};

&lpd_watchdog {
    status = "disabled";
    timeout-sec = <90>;
};

&spi0 {
    //is-decoded-cs = <0>
    //num-cs = <1>;
    status = "okay";
    spidev@0 {
        compatible = "rohm,dh2228fv"; /*same as spidev but with less complaining */
        spi-max-frequency = <5000000>;
        reg = <0>;
        };
};

&i2c0 {
    status = "okay";
    clock-frequency = <100000>;
};

&gem3 {
    status = "okay";
    phy-mode = "rgmii-id";
};

&rtc {
	status = "okay";
};

/* SD1 with level shifter */
&sdhci1 {
    status = "okay";
};

/* ULPI SMSC USB3320 */
/*&usb0 {
    status = "okay";
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_usb0_default>;
};*/

&cpu_opp_table {
	opp00 {
		opp-hz = /bits/ 64 <1333333320>;
	};
};
